.container {
  background: #F5F6FA;
  opacity: 1;
  border-radius: 10px;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  width: 670rpx;
  padding-bottom: 60rpx;
  margin-bottom: 50rpx;
}
.container .header {
  display: flex;
  justify-content: space-between;
}
.container .header .title {
  margin-top: 32rpx;
}
.container .header .title .main_title {
  font-size: 36rpx;
  font-weight: 500;
  line-height: 1.5em;
  color: #3E455A;
}
.container .header .title .sub_title {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 1.5em;
  color: #858FAD;
}
.container .header .tab {
  width: 200rpx;
  margin-top: 50rpx;
}
.container .header .tab .inactive {
  width: 84rpx;
  opacity: 1;
  border-radius: 20px;
  font-size: 24rpx;
  padding: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #858FAD;
}
.container .header .tab .active {
  width: 84rpx;
  background: #858FAD;
  opacity: 1;
  border-radius: 20px;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.container .content .chart {
  width: 100%;
  height: 600rpx;
}
.container .content .chart ec-canvas {
  width: 100%;
  height: 100%;
}
.container .content .species {
  display: flex;
  margin-bottom: 30rpx;
}
.container .content .species .specie {
  width: 25%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}
.container .content .species .specie text {
  font-size: 24rpx;
  color: #3E455A;
}
.container .content .list .row {
  display: flex;
}
.container .content .list .row:nth-child(odd) {
  width: 588rpx;
  height: 58rpx;
  background: #E7EAF4;
  opacity: 1;
  border-radius: 30px;
}
.container .content .list .row:nth-child(even) {
  width: 588rpx;
  height: 58rpx;
  opacity: 1;
  border-radius: 30px;
}
.container .content .list .row .col {
  font-size: 24rpx;
  width: 25%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}
.container .content .list .row .col.important {
  color: #ff5175;
  font-weight: bold;
}
