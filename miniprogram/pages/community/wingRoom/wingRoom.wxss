.main .tit_num {
  width: 100%;
  height: 66rpx;
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 66rpx;
  color: #3E455A;
  margin: 50rpx 0 0 40rpx;
}
.main .ul_li {
  width: 670rpx;
  background: #F5F6FA;
  opacity: 1;
  border-radius: 30rpx;
  margin: 40rpx auto;
}
.main .ul_li .img_arr {
  padding: 40rpx 40rpx 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.main .ul_li .img_arr .img {
  width: 286rpx;
  height: 184rpx;
  opacity: 1;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.main .ul_li .text_box {
  margin-top: 20rpx;
  padding: 0 40rpx;
}
.main .ul_li .text_box .text:last-child {
  padding-bottom: 32rpx;
}
